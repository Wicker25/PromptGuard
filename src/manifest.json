{
  "manifest_version": 3,
  "name": "PromptGuard",
  "version": "1.0.1",
  "description": "Protect your personal data while chatting with ChatGPT and other major AI platforms in your browser.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48-grey.png",
      "96": "icons/icon-96-grey.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
